{% extends 'base.html.twig' %}

{% block title %}{{ movie.titre }}{% endblock %}

{% block body %}
    <div style="max-width: 1000px; margin: 40px auto; padding: 20px; display: flex; gap: 40px; color: white;">

        {# 1. L'Affiche du film #}
        <div style="flex: 1;">
            <img src="{{ movie.coverImage }}" alt="{{ movie.titre }}" style="width: 100%; border-radius: 8px; box-shadow: 0 0 20px rgba(0,0,0,0.5);">
        </div>

        {# 2. Les infos #}
        <div style="flex: 2;">
            <h1 style="font-size: 3rem; margin-bottom: 10px;">{{ movie.titre }}</h1>

            <div style="margin-bottom: 20px; color: #aaa;">
            <span style="border: 1px solid #aaa; padding: 2px 5px; border-radius: 3px; margin-right: 10px;">
                {{ movie.isSeries ? 'SÉRIE' : 'FILM' }}
            </span>
                <span>Sortie le {{ movie.releaseDate|date('d/m/Y') }}</span>
            </div>

            {# Liste des catégories #}
            <div style="margin-bottom: 20px;">
                {% for category in movie.categories %}
                    <span style="background-color: #e50914; padding: 5px 10px; border-radius: 15px; font-size: 0.8em; margin-right: 5px;">
                    {{ category.name }}
                </span>
                {% endfor %}
            </div>

            <p style="font-size: 1.1rem; line-height: 1.6; margin-bottom: 30px;">
                {{ movie.description }}
            </p>

            {# Bouton d'action (On le rendra fonctionnel juste après) #}
            <a href="#" style="background-color: white; color: black; padding: 10px 25px; text-decoration: none; font-weight: bold; border-radius: 4px; font-size: 1.1rem;">
                ▶ Lecture
            </a>

            <button style="background-color: rgba(109, 109, 110, 0.7); color: white; border: none; padding: 10px 25px; font-weight: bold; border-radius: 4px; font-size: 1.1rem; cursor: pointer; margin-left: 10px;">
                + Ma Liste
            </button>
        </div>
    </div>
{% endblock %}
